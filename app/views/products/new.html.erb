<%= form_with model: @product, url: products_path do |f| %>
  <div class="form-control w-full max-w-md">
    <%= f.label :code, class:'text-label' %>
    <%= f.text_field :code, class:'input input-bordered' %>
  </div>

  <div class="form-control w-full max-w-md">
    <%= f.label :name, class:'text-label' %>
    <%= f.text_field :name, class:'input input-bordered' %>
  </div>

  <div class="form-control w-full max-w-md">
    <%= f.label :price, class:'text-label' %>
    <%= f.number_field :price, class:'input input-bordered' %>
  </div>

  <div>
    <% f.object.selectable_categories.each do |category| %>
      <%= f.label :category_ids, value: category.id, class: 'checkbox' do %>
        <%= f.check_box :category_ids, { multiple: true }, category.id, nil %>
        <%= category.name %>
      <% end %>
    <% end %>
  </div>

  <%= f.submit '登録' ,class:'btn btn-prymary'%>
<% end %>